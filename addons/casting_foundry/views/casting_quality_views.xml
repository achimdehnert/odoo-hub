<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="casting_quality_tree" model="ir.ui.view">
        <field name="name">casting.quality.check.tree</field>
        <field name="model">casting.quality.check</field>
        <field name="arch" type="xml">
            <list decoration-success="result=='pass'" decoration-warning="result=='conditional'" decoration-danger="result=='fail'">
                <field name="name"/>
                <field name="order_id"/>
                <field name="check_type"/>
                <field name="check_date"/>
                <field name="result" widget="badge"
                       decoration-success="result == 'pass'"
                       decoration-warning="result == 'conditional'"
                       decoration-danger="result == 'fail'"/>
                <field name="defect_count"/>
                <field name="inspector_id"/>
            </list>
        </field>
    </record>

    <record id="casting_quality_form" model="ir.ui.view">
        <field name="name">casting.quality.check.form</field>
        <field name="model">casting.quality.check</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Prüfung">
                            <field name="order_id"/>
                            <field name="order_line_id" domain="[('order_id','=',order_id)]"/>
                            <field name="check_type"/>
                            <field name="check_date"/>
                            <field name="inspector_id"/>
                        </group>
                        <group string="Ergebnis">
                            <field name="result" widget="radio"/>
                            <field name="sample_size"/>
                            <field name="defect_count"/>
                        </group>
                    </group>
                    <group>
                        <group string="Messwerte">
                            <field name="nominal_value"/>
                            <field name="measured_value"/>
                            <field name="tolerance_plus"/>
                            <field name="tolerance_minus"/>
                        </group>
                    </group>
                    <group string="Fehler">
                        <field name="defect_type_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Prüfbericht">
                            <field name="notes" placeholder="Prüfbericht..."/>
                        </page>
                        <page string="Korrekturmaßnahme">
                            <field name="corrective_action" placeholder="Korrekturmaßnahme beschreiben..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="casting_quality_search" model="ir.ui.view">
        <field name="name">casting.quality.check.search</field>
        <field name="model">casting.quality.check</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="order_id"/>
                <filter name="pass" string="Bestanden" domain="[('result','=','pass')]"/>
                <filter name="fail" string="Nicht bestanden" domain="[('result','=','fail')]"/>
                <group expand="0" string="Gruppieren">
                    <filter name="group_type" string="Prüfart" context="{'group_by': 'check_type'}"/>
                    <filter name="group_result" string="Ergebnis" context="{'group_by': 'result'}"/>
                    <filter name="group_month" string="Monat" context="{'group_by': 'check_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="casting_quality_pivot" model="ir.ui.view">
        <field name="name">casting.quality.check.pivot</field>
        <field name="model">casting.quality.check</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="check_type" type="row"/>
                <field name="result" type="col"/>
                <field name="defect_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="casting_quality_action" model="ir.actions.act_window">
        <field name="name">Qualitätsprüfungen</field>
        <field name="res_model">casting.quality.check</field>
        <field name="view_mode">list,form,pivot</field>
    </record>
</odoo>
