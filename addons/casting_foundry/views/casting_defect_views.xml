<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="casting_defect_tree" model="ir.ui.view">
        <field name="name">casting.defect.type.tree</field>
        <field name="model">casting.defect.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="severity" widget="badge"
                       decoration-success="severity == 'minor'"
                       decoration-warning="severity == 'major'"
                       decoration-danger="severity == 'critical'"/>
            </list>
        </field>
    </record>

    <record id="casting_defect_form" model="ir.ui.view">
        <field name="name">casting.defect.type.form</field>
        <field name="model">casting.defect.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="severity"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Beschreibung">
                            <field name="description" placeholder="Fehlerbeschreibung und Ursache..."/>
                        </page>
                        <page string="Abhilfe">
                            <field name="remedy" placeholder="AbhilfemaÃŸnahme..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="casting_defect_action" model="ir.actions.act_window">
        <field name="name">Fehlerarten</field>
        <field name="res_model">casting.defect.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
