<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="scm_inspection_tree" model="ir.ui.view">
        <field name="name">scm.incoming.inspection.tree</field>
        <field name="model">scm.incoming.inspection</field>
        <field name="arch" type="xml">
            <list>
                <field name="purchase_id"/>
                <field name="inspection_type"/>
                <field name="inspection_date"/>
                <field name="result" widget="badge"
                       decoration-success="result == 'accepted'"
                       decoration-warning="result == 'conditional'"
                       decoration-danger="result == 'rejected'"/>
                <field name="acceptance_rate"/>
                <field name="certificate_type"/>
                <field name="inspector_id"/>
            </list>
        </field>
    </record>

    <record id="scm_inspection_form" model="ir.ui.view">
        <field name="name">scm.incoming.inspection.form</field>
        <field name="model">scm.incoming.inspection</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="purchase_id"/>
                            <field name="inspection_type"/>
                            <field name="result"/>
                            <field name="certificate_type"/>
                        </group>
                        <group>
                            <field name="inspector_id"/>
                            <field name="inspection_date"/>
                            <field name="sample_size"/>
                            <field name="defect_count"/>
                            <field name="acceptance_rate"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prüfbericht">
                            <field name="notes" placeholder="Prüfbericht..."/>
                        </page>
                        <page string="Korrekturmaßnahme">
                            <field name="corrective_action" placeholder="Korrekturmaßnahme..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="scm_inspection_action" model="ir.actions.act_window">
        <field name="name">Wareneingangsprüfungen</field>
        <field name="res_model">scm.incoming.inspection</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
