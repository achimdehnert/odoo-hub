<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="scm_warehouse_tree" model="ir.ui.view">
        <field name="name">scm.warehouse.tree</field>
        <field name="model">scm.warehouse</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="warehouse_type"/>
                <field name="capacity_pallets"/>
                <field name="manager_id"/>
            </list>
        </field>
    </record>

    <record id="scm_warehouse_form" model="ir.ui.view">
        <field name="name">scm.warehouse.form</field>
        <field name="model">scm.warehouse</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="warehouse_type"/>
                        </group>
                        <group>
                            <field name="capacity_pallets"/>
                            <field name="manager_id"/>
                        </group>
                    </group>
                    <field name="address" placeholder="Adresse..."/>
                    <field name="notes" placeholder="Bemerkungen..."/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="scm_stock_move_tree" model="ir.ui.view">
        <field name="name">scm.stock.move.tree</field>
        <field name="model">scm.stock.move</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="part_id"/>
                <field name="warehouse_id"/>
                <field name="move_type"/>
                <field name="quantity"/>
                <field name="lot_number"/>
                <field name="reference"/>
            </list>
        </field>
    </record>

    <record id="scm_warehouse_action" model="ir.actions.act_window">
        <field name="name">Lager</field>
        <field name="res_model">scm.warehouse</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="scm_stock_move_action" model="ir.actions.act_window">
        <field name="name">Lagerbewegungen</field>
        <field name="res_model">scm.stock.move</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
