<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="scm_supplier_info_tree" model="ir.ui.view">
        <field name="name">scm.supplier.info.tree</field>
        <field name="model">scm.supplier.info</field>
        <field name="arch" type="xml">
            <list>
                <field name="part_id"/>
                <field name="partner_id"/>
                <field name="priority"/>
                <field name="rating"/>
                <field name="price"/>
                <field name="lead_time_days"/>
                <field name="on_time_delivery_pct"/>
            </list>
        </field>
    </record>

    <record id="scm_supplier_info_form" model="ir.ui.view">
        <field name="name">scm.supplier.info.form</field>
        <field name="model">scm.supplier.info</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="part_id"/>
                            <field name="partner_id"/>
                            <field name="supplier_part_number"/>
                            <field name="priority"/>
                            <field name="rating"/>
                        </group>
                        <group>
                            <field name="price"/>
                            <field name="currency"/>
                            <field name="min_order_qty"/>
                            <field name="lead_time_days"/>
                            <field name="on_time_delivery_pct"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Bemerkungen..."/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="scm_supplier_info_action" model="ir.actions.act_window">
        <field name="name">Lieferanteninformationen</field>
        <field name="res_model">scm.supplier.info</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
