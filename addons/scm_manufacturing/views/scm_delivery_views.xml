<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="scm_delivery_tree" model="ir.ui.view">
        <field name="name">scm.delivery.tree</field>
        <field name="model">scm.delivery</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="part_id"/>
                <field name="quantity"/>
                <field name="carrier"/>
                <field name="tracking_number"/>
                <field name="total_weight_kg"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'ready'"
                       decoration-success="state == 'delivered'"
                       decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <record id="scm_delivery_form" model="ir.ui.view">
        <field name="name">scm.delivery.form</field>
        <field name="model">scm.delivery</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_ready" string="Versandbereit" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_ship" string="Versenden" type="object"
                            class="oe_highlight" invisible="state != 'ready'"/>
                    <button name="action_deliver" string="Zugestellt" type="object"
                            class="oe_highlight" invisible="state != 'shipped'"/>
                    <button name="action_cancel" string="Stornieren" type="object"
                            invisible="state in ('delivered','cancelled')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,ready,shipped,delivered"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="part_id"/>
                            <field name="quantity"/>
                            <field name="total_weight_kg"/>
                        </group>
                        <group>
                            <field name="carrier"/>
                            <field name="tracking_number"/>
                            <field name="date_shipped"/>
                            <field name="date_delivered"/>
                        </group>
                    </group>
                    <field name="notes"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="scm_delivery_search" model="ir.ui.view">
        <field name="name">scm.delivery.search</field>
        <field name="model">scm.delivery</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="tracking_number"/>
                <filter name="draft" string="Entwurf" domain="[('state','=','draft')]"/>
                <filter name="shipped" string="Versendet" domain="[('state','=','shipped')]"/>
                <filter name="delivered" string="Zugestellt" domain="[('state','=','delivered')]"/>
                <group expand="0" string="Gruppieren">
                    <filter name="group_partner" string="EmpfÃ¤nger"
                            context="{'group_by': 'partner_id'}"/>
                    <filter name="group_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_carrier" string="Spediteur"
                            context="{'group_by': 'carrier'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="scm_delivery_action" model="ir.actions.act_window">
        <field name="name">Lieferungen</field>
        <field name="res_model">scm.delivery</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
