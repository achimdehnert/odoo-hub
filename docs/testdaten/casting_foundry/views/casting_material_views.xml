<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="casting_material_tree" model="ir.ui.view">
        <field name="name">casting.material.tree</field>
        <field name="model">casting.material</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="material_type"/>
                <field name="density"/>
                <field name="melting_point"/>
                <field name="cost_per_kg"/>
                <field name="alloy_count"/>
            </list>
        </field>
    </record>

    <record id="casting_material_form" model="ir.ui.view">
        <field name="name">casting.material.form</field>
        <field name="model">casting.material</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(casting_foundry.casting_alloy_action)d" type="action"
                                class="oe_stat_button" icon="fa-flask"
                                context="{'search_default_base_material_id': active_id}">
                            <field name="alloy_count" widget="statinfo" string="Legierungen"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="material_type"/>
                        </group>
                        <group>
                            <field name="density"/>
                            <field name="melting_point"/>
                            <field name="cost_per_kg"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Technische Beschreibung..."/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="casting_material_action" model="ir.actions.act_window">
        <field name="name">Werkstoffe</field>
        <field name="res_model">casting.material</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
